<h1 class="trans_title">Transactions</h1>
<section class="transactions">
<%= link_to "Add Transaction", new_category_transaction_path(@category) %>
    <div class="modal_transaction">
      <img src="<%= @category.icon %>" alt='icon-categ' />
      <div>
        <h2><%= @category.name %></h2>
        <h4> Total Amount: <%=@category.transactions.sum(:amount) %> $</h4>
        <%= button_to "Delete", @category, method: :delete %>
      </div>
    </div>
    <% if @transactions.exists? %>
      <section class="single_transc">
        <% @transactions.each do |transaction| %>
        <div> 
            <%= render transaction %>
          </div>
        <% end %>
      </section>
    <% else %> 
    <% end %>
</div>
<div>
</section>